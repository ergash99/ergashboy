<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE taglib
        PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
        "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
	<tlib-version>1.0</tlib-version>
	<jsp-version>2.0</jsp-version>
	<short-name>fdl</short-name>
	<uri>/file-tags</uri>
	<description>
        Tag Library for file download link support
    </description>

    <tag>
        <name>file</name>
        <tag-class>uz.tiu.daily.taglibs.FileTag</tag-class>
        <description>
            file process tag
        </description>
        <attribute>
            <name>fileTypeInfoMapKeyMime</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.util.Map</type>
            <description>
                fileTypeInfoMapKeyMime
            </description>
        </attribute>
        <attribute>
            <name>fileStorage</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <type>uz.tiu.daily.persistence.FileStorage</type>
            <description>
                FileStorage instance
            </description>
        </attribute>
        <attribute>
            <name>fileDownloadPath</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.String</type>
            <description>
                file name based download path, ex. "/file/"
            </description>
        </attribute>
        <attribute>
            <name>fileDownloadUrlById</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.String</type>
            <description>
                file id based download url, ex. "download.htm?id="
            </description>
        </attribute>
        <attribute>
            <name>imageFolderUrl</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.String</type>
            <description>
                file image folder url
            </description>
        </attribute>
        <attribute>
            <name>imageWidth</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.Integer</type>
            <description>
                file image width
            </description>
        </attribute>
        <attribute>
            <name>imageHeight</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.Integer</type>
            <description>
                file image height
            </description>
        </attribute>
        <attribute>
            <name>imageAlt</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.String</type>
            <description>
                file image alt text
            </description>
        </attribute>
        <attribute>
            <name>targetBlank</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.Boolean</type>
            <description>
                file target is new window
            </description>
        </attribute>
        <attribute>
            <name>randomParam</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.Boolean</type>
            <description>
                add a random value to the url
            </description>
        </attribute>
        <attribute>
            <name>randomParamName</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.String</type>
            <description>
                The random param name
            </description>
        </attribute>

        <attribute>
            <name>language</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>java.lang.Byte</type>
            <description>
                rendering language
            </description>
        </attribute>
    </tag>
</taglib>
